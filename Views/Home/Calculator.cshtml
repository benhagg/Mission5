@{
    ViewData["Title"] = "Tutoring Fee Calculator"; // allows you to pass data from a controller to a view
}

<h1>Baking Lessons Fee Calculator</h1>
<p>Enter the number of hours you need tutoring for, and see the total cost.</p>

<form id="tutoringForm">
    <label for="hours">Number of Hours:</label>
    <input type="number" id="hours" min="0" required />
    <span id="error-message" style="color: red;"></span>
    <br /><br />

    <label for="rate">Rate per Hour:</label>
    <input type="text" id="rate" value="25" readonly /> <!-- Change rate as needed -->
    <br /><br />

    <button type="submit">Calculate Total</button>
    <br /><br />

    <label for="total">Total Cost:</label>
    <input type="text" id="total" readonly />
</form>

<br />

<!-- jQuery Script for AJAX -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script> @*includes the jQuery library*@
<script src="~/js/Calculator.js"></script> @*link js file to the View*@
